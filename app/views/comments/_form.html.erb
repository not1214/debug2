<%= form_with(model:[book, comment], remote: true) do |f| %>
  <% if comment.errors.any? %>
    <ul>
    <% comment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>  
    <%= f.text_area :comment, rows:"5", class: "form-control" %><br />
    <%= f.submit "送信" %>
<% end %>
