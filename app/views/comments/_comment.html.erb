<% book.comments.each do |comment| %>
  <tr>
    <td>
      <%= link_to user_path(comment.user_id) do %>
      <%= attachment_image_tag comment.user, :profile_image, :fill, 30, 30, fallback: "no-image-icon.jpg" %><br>
      <%= comment.user.name %>
      <% end %>
    </td>
    <td><%= comment.comment %></td>
    <td>
      <% if comment.user_id == current_user.id %>
      <%= link_to "削除", book_comment_path(comment.book_id, comment.id), method: :delete, remote: true, class: "btn btn-danger" %>
      <% end %>
    </td>
  </tr>
<% end %> 