<h1>Follower Users</h1>
<table class='table table-hover table-inverse'>
  <thead> 
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <th><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg" %></th>
      <th><%= user.name %></th>
      <th>フォロー数:<%= user.followings.count %></th>
      <th>フォロワー数:<%= user.followers.count %></th>
      <th><%= link_to "Show", user_path(user.id) %></th>
    </tr>
  <% end %>  
  </tbody>
</table>