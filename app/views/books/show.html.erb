<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @newbook %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.already_favorited?(current_user) %>
              <%= link_to book_favorites_path(@book.id), method: :delete do %>
                <p class="text-danger">♥<%= @book.favorites.count %></p>
              <% end %>
            <% else %>
              <%= link_to book_favorites_path(@book.id), method: :post do %>
                ♡<%= @book.favorites.count %>
              <% end %>
            <% end %> 
          </td>
          <td>
            コメント件数:<%= @book.comments.count %>
          </td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>  
        </tr>
      </table>
      <div class="d-flex flex-row">
        <% @book.comments.each do |comment| %>
          <div>
            <%= link_to user_path(comment.user_id) do %>
              <%= attachment_image_tag comment.user, :profile_image, :fill, 30, 30, fallback: "no-image-icon.jpg" %><br>
              <%= comment.user.name %>
            <% end %>
          </div>
          <div>
            <%= comment.comment %>  
          </div>
          <div>
            <% if comment.user_id == current_user.id %>
              <%= link_to "削除", book_comment_path(comment.book_id, comment.id), method: :delete, class: "btn btn-danger" %>
            <% end %>
          </div>
        <% end %>  
      </div>
      
      <div>
        <%= form_with(model:[@book, @comment], local:true) do |f| %>
          <%= f.text_area :comment, rows:"5", class: "form-control" %><br />
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>